    "autoprefixer": "^10.4.23",
    "baseline-browser-mapping": "^2.9.19",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^10.7.0",
    "iconv-lite": "^0.7.2",
    "jschardet": "^3.1.4",
    "json5": "^2.2.3",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.4"
