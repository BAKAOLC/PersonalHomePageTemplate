    "highlight.js": "^11.11.1",
    "lucide-vue-next": "^0.563.0",
    "marked": "^17.0.1",
    "monaco-editor": "^0.55.1",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.2.0",
    "pinia": "^3.0.4",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vue": "^3.5.27",
    "vue-i18n": "^11.2.8",
    "vue-router": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@tailwindcss/vite": "^4.1.18",
